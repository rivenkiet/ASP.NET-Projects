@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name Category
				</th>
				<th>
					Display Order
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.OrderBy(i => i.DisplayOrder))
			{
				<tr>
					<td>
						@item.Name
					</td>
					<td>
						@item.DisplayOrder
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil"></i> Edit
							</a>
							<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>
