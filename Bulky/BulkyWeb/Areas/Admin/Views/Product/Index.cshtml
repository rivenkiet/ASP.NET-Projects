@model List<Product>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table id="tblTable" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Title
				</th>
				<th>
					Description
				</th>
				<th>
					Author
				</th>
				<th>
					Price
				</th>
				<th>
					Category
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.Title
					</td>
					<td>
						@item.Description
					</td>
					<td>
						@item.Author
					</td>
					<td>
						@item.ListPrice
					</td>
					<td>
						@item.Category.Name
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil"></i> Edit
							</a>
							<a href="/admin/product/delete/@item.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts{
	<script src="~/js/product.js"></script>
}